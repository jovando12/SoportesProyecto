                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select asp-for="tipo_requerimiento" id="select" class="form-control">
                                                        <option value="0">Seleccione el tipo de requerimineto</option>
                                                        <option value="1">Desbloquear Usuario</option>
                                                        <option value="2">Instalar Impresora</option>
                                                        <option value="3">Habilitar carpeta en Red</option>
                                                    </select>
                                                </div>
                                            </div>
                                            
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Solicitante</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" asp-for="solicitante" class="form-control" >
                                                    <small class="help-block form-text">Nombre Solicitante</small>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Area Departamento</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" asp-for="area_departamento" class="form-control">
                                                    <small class="help-block form-text">Departamento al que pertenece</small>
                                                </div>
                                            </div>
                                            
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">Comentario</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea asp-for="comentar" id="textarea-input" rows="9" placeholder="Observaciones..." class="form-control"></textarea>
                                                </div>
                                            </div>

